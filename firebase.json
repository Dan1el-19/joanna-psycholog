{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/o-mnie",
        "destination": "/main/o-mnie.html"
      },
      {
        "source": "/oferta",
        "destination": "/main/oferta.html"
      },
      {
        "source": "/umow-wizyte",
        "destination": "/main/umow-wizyte.html"
      },
      {
        "source": "/kontakt",
        "destination": "/main/kontakt.html"
      },
      {
        "source": "/admin",
        "destination": "/main/admin.html"
      },
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/404.html"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs22"
  },
  "firestore": {
    "database": "(default)",
    "location": "eur3",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
